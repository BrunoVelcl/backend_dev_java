<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="ACME" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.acme.domain.entity.Manufacturer</class>
        <class>com.acme.domain.entity.Machine</class>
        <class>com.acme.domain.entity.Worker</class>
        <class>com.acme.domain.entity.Country</class>
        <class>com.acme.domain.entity.Department</class>
        <class>com.acme.domain.entity.Salary</class>
        <class>com.acme.domain.entity.ShiftGroup</class>
        <class>com.acme.domain.entity.ProcessStep</class>
        <class>com.acme.domain.entity.Contract</class>
        <class>com.acme.domain.entity.City</class>

        <properties>
            <!-- Change to your DB -->
            <property name="jakarta.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value=" jdbc:sqlserver://localhost\SQLEXPRESS;databaseName=ACME;encrypt=true;trustServerCertificate=true;"/>
            <property name="jakarta.persistence.jdbc.user" value="java"/>
            <property name="jakarta.persistence.jdbc.password" value="sql"/>


            <!-- Hibernate config -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>


        </properties>
    </persistence-unit>
</persistence>

